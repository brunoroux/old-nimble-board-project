{% extends 'NimbleBoardBundle::layout.html.twig' %}

{% block content %}
  <h1>{% trans %}project.list{% endtrans %}</h1>
  <div class="links">
    <a class="button" href="{{ path('_projectAdd') }}"><img src="{{ asset('bundles/nimbleboard/images/add.png') }}" alt="{% trans %}project.add{% endtrans %}" /> {% trans %}project.add{% endtrans %}</a>
  </div>
  <div class="project_list">
    {% for project in projects %}
      <div class="project">
        <h2><a href="{{ path('_productBacklog', {projectId: project.id}) }}">{{ project.name }}</a></h2>
        <p>{{ project.description }}</p>
        <span class="start">{% trans %}project.start{% endtrans %} : {{ project.start.format('d/m/y') }}</span>
        <span class="end">{% trans %}project.end{% endtrans %} : {{ project.end.format('d/m/y') }}</span>
        <div class="links">
          <a class="button" href="{{ path('_projectEdit', {id: project.id}) }}"><img src="{{ asset('bundles/nimbleboard/images/edit.png') }}" alt="{% trans %}edit{% endtrans %}" /> {% trans %}edit{% endtrans %}</a>
          <a class="button" href="{{ path('_projectDelete', {id: project.id}) }}"><img src="{{ asset('bundles/nimbleboard/images/delete.png') }}" alt="{% trans %}delete{% endtrans %}" /> {% trans %}delete{% endtrans %}</a>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}