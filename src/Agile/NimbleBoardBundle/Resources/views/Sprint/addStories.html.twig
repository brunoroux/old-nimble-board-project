{% extends 'NimbleBoardBundle::layout.html.twig' %}

{% block content %}
  <h1>{% trans %}sprint.addStories{% endtrans %}</h1>
  <div class="links">
    <a class="button" href="{{ path('_sprintBacklog', {id: sprint.id}) }}">{% trans %}sprint.backlog{% endtrans %}</a>
    <a class="button space_button" href="{{ path('_productBacklog', {projectId: sprint.project.id}) }}">{% trans %}Product.backlog{% endtrans %}</a>
  </div>
  <div id="stories_sprint_drag">
    <div class="backlog_container">
      <div class="title">
        <h2>{% trans %}Product.backlog{% endtrans %}</h2>
      </div>
      <div class="product_backlog backlog ui-widget-content">
        {% for story in stories %}
          {% include 'NimbleBoardBundle:Story:detail.html.twig' with {'useposition': false, 'story': story} %}
        {% endfor %}
      </div>
    </div>
    <div class="backlog_container">
      <div class="title">
        <h2>{% trans %}sprint.backlog{% endtrans %}</h2>
      </div>
      <div class="sprint_backlog backlog ui-widget-content">
        {% for story in  sprint.stories %}
          {% include 'NimbleBoardBundle:Story:detail.html.twig' with {'useposition': false, 'story': story} %}
        {% endfor %}
      </div>
    </div>
  </div>
  <script type="text/javascript">
    var setStoryTargetUrl = '{{ path('_sprintAddStory') }}';
    var sprintId = {{ sprint.id }};
  </script>
{% endblock %}